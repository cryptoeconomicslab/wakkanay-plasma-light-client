    "@cryptoeconomicslab/eth-wallet": "0.0.1",
    "@cryptoeconomicslab/hash": "0.0.6",
    "@cryptoeconomicslab/indexeddb-kvs": "0.0.3",
    "@cryptoeconomicslab/merkle-tree": "0.0.6",
    "@cryptoeconomicslab/ovm": "0.0.6",
    "@cryptoeconomicslab/plasma": "0.0.6",
    "@cryptoeconomicslab/primitives": "0.0.6",
    "@cryptoeconomicslab/wallet": "0.0.6",
    "axios": "^0.19.0",
    "ethers": "^4.0.40",
    "event-emitter": "^0.3.5",
    "tslib": "^1.10.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/?(*.)+(spec|test).(ts|js)",
      "**/?(*.)+(spec|test).ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}
