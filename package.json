{
  "name": "wakkanay-plasma-light-client",
  "version": "0.0.1",
  "description": "plasma light client implementation",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/start.js",
    "build": "tsc --build ./tsconfig.json",
    "build:check": "tsc --noEmit",
    "build:dev": "tsc",
    "test": "jest",
    "lint": "eslint --ext ts,tsx src",
    "lint:fix": "eslint --fix --ext ts,tsx src",
    "clean": "rm -rf dist",
    "prepare": "npm run build"
  },
  "keywords": [],
  "author": {
    "name": "Cryptoeconomics Lab",
    "url": "https://www.cryptoeconomicslab.com/"
  },
  "engines": {
    "node": ">=10"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/event-emitter": "^0.3.3",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.18",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "eslint": "^6.7.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "fake-indexeddb": "^3.0.0",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "@cryptoeconomicslab/coder": "0.0.6",
    "@cryptoeconomicslab/context": "0.0.6",
    "@cryptoeconomicslab/contract": "0.0.6",
    "@cryptoeconomicslab/db": "0.0.6",
    "@cryptoeconomicslab/eth-coder": "0.0.1",
